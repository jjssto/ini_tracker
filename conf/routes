# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Pages
#########

GET /                   controllers.PageController.index(req: Request)
GET /combat/:i          controllers.SR4_CombatController.combat(i: Integer, req: Request)
GET /chars              controllers.SR4_CharController.chars(req: Request)
GET /login              controllers.PageController.loginPage(req: Request)
GET /createuser         controllers.PageController.createUserPage(req: Request)
GET /combats            controllers.SR4_CombatController.index(req: Request)

GET /diceroller         controllers.GEN_Controller.index(req: Request)

# Forms
###########

POST /combat/update     controllers.SR4_CombatController.updateCombat(req: Request)
POST /combat/ini        controllers.SR4_CombatController.rollInitiative(req: Request)
POST /combat           controllers.SR4_CombatController.roll(req: Request)
POST /addcombat         controllers.SR4_CombatController.addCombat(req: Request)
POST /combat/addchars   controllers.SR4_CombatController.addCharsToCombat(req: Request)
POST /combat/removechars   controllers.SR4_CombatController.removeCharsFromCombat(req: Request)

POST /addchar            controllers.SR4_CharController.addChar(req: Request)
POST /login             controllers.PageController.login(req: Request)
POST /createuser         controllers.PageController.createUser(req: Request)

POST /diceroller        controllers.GEN_Controller.roll(req: Request)
# JSON Controller

# JSON
###########

GET /getchars           controllers.SR4_CharController.getAllChars
GET /getotherchars/:i   controllers.SR4_CharController.getOtherChars(i: Integer)
GET /getcombatchars/:i  controllers.SR4_CharController.getCombatChars(i: Integer)
GET /getchars/:i        controllers.SR4_CombatController.getChar(i: Integer)
GET /getcombats         controllers.SR4_CombatController.getCombats
GET /getcombats/:i      controllers.SR4_CombatController.getCombat(i: Integer)
GET /getrecord/:i       controllers.SR4_CombatController.getRecord(i: Integer)
GET /ini               controllers.SR4_CombatController.getIniList(req: Request)
GET /rolls              controllers.SR4_CombatController.getDiceRolls(req: Request)


# Assets
GET     /assets/*file               controllers.Assets.at(path="/public", file)