# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Pages
#########

GET /                   controllers.PageController.index
GET /combat/:i          controllers.CombatController.combat(i: Integer, req: Request)
GET /chars              controllers.CharController.chars(req: Request)

# Forms
###########

POST /combat/update     controllers.CombatController.updateCombat(req: Request)
POST /combat/ini        controllers.CombatController.rollInitiative(req: Request)
POST /combat           controllers.CombatController.roll(req: Request)
POST /addcombat         controllers.CombatController.addCombat(req: Request)
POST /combat/addchars   controllers.CombatController.addCharsToCombat(req: Request)
POST /combat/removechars   controllers.CombatController.removeCharsFromCombat(req: Request)

POST /addchar            controllers.CharController.addChar(req: Request)
# JSON Controller

# JSON
###########

GET /getchars           controllers.CharController.getAllChars
GET /getotherchars/:i   controllers.CharController.getOtherChars(i: Integer)
GET /getcombatchars/:i  controllers.CharController.getCombatChars(i: Integer)
GET /getchars/:i        controllers.CombatController.getChar(i: Integer)
GET /getcombats         controllers.CombatController.getCombats
GET /getcombats/:i      controllers.CombatController.getCombat(i: Integer)
GET /getrecord/:i       controllers.CombatController.getRecord(i: Integer)
GET /ini               controllers.CombatController.getIniList(req: Request)
GET /rolls              controllers.CombatController.getDiceRolls(req: Request)


# Assets
GET     /assets/*file               controllers.Assets.at(path="/public", file)